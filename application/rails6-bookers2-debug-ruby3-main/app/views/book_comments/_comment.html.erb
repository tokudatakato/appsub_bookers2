<% comments.each do |comment| %>
  <%= image_tag comment.user.get_profile_image, size:'100x100' %>
  <%= comment.comment %>
  <%= link_to "Destroy", book_book_comment_path(book), class: 'btn btn-danger', method: :delete, remote:true %>
  <p>
    <%= link_to user_path(comment.user) do %>
      <%= comment.user.name %>
    <% end %>
  </p>
<% end %>

<%= form_with(model: [book, comment], url:  book_book_comments_path(book), remote: false) do |f| %>
  <%= f.text_area :comment, rows: '5', class: "w-100 inputComment" %>
  <p><%= f.submit "送信" %></p>
<% end %>